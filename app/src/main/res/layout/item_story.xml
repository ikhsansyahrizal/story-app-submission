<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/size_normal"
    android:layout_marginHorizontal="@dimen/size_xxxsmall"
    android:layout_marginVertical="@dimen/space_xxsmall"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scrollbars="vertical">

        <ImageView
            android:id="@+id/iv_item_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="75dp" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium"
            android:layout_marginStart="@dimen/space_normal"
            android:layout_marginBottom="@dimen/space_xxsmall"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_description"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="akun testing" />

        <TextView
            android:id="@+id/tv_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/space_xxsmall"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_date"
            app:layout_constraintStart_toStartOf="@+id/tv_item_name"
            tools:text="tes deskripsi" />

        <TextView
            android:id="@+id/tv_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/space_normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_item_description"
            tools:text="4 Juli 2025" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>